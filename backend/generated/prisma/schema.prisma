generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id          Int       @id @default(autoincrement())
  firstname   String    @db.VarChar(50)
  lastname    String    @db.VarChar(50)
  email       String    @unique @db.VarChar(250)
  password    String
  bio         String?
  skills      String?
  github      String?
  portfolio   String?
  resumelink  String?
  profilelink String?
  created_at  DateTime? @default(now()) @db.Timestamptz(6)
}

model jobs {
  id          Int       @id @default(autoincrement())
  jobtitle    String
  companyname String
  jobtype     String
  location    String
  salary      Int
  eligibility String
  duration    String
  deadline    DateTime
  skills      String
  aboutjob    String
  link        String
  email       String?
  created_at  DateTime? @default(now()) @db.Timestamptz(6)
}
