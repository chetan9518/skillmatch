generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id         Int       @id @default(autoincrement())
  firstname  String    @db.VarChar(50)
  lastname   String?   @db.VarChar(50)
  email      String    @unique @db.VarChar(250)
  password   String?
  googleid   String?   @unique
  authprovider String  @default("credentials")
  bio        String?
  skills     String?
  github     String?
  portfolio  String?
  resumelink String?
  profilelink String?
  codeforce  codeforce?
  leetcode   leetcode?
  created_at DateTime? @default(now()) @db.Timestamptz(6)
}

model jobs{
  id          Int       @id @default(autoincrement())
  jobtitle    String
  companyname String
  jobtype     String 
  location    String
  salary      Int
  eligibility String
  duration    String
  deadline    DateTime
  skills      String
  aboutjob    String
  link        String
  email       String 
  created_at DateTime? @default(now()) @db.Timestamptz(6)
}

model messages{
  id       Int    @id@default(autoincrement())
  sender   String 
  receiver String 
  content String
  created_at DateTime?  @default(now())
  isread    Boolean     @default(false)
}
model codeforce{
  id       Int  @id@default(autoincrement())
    handle      String   @unique
  rating      Int?
  maxRating   Int?
  rank        String?
  contests    Int?
  lastSynced  DateTime @default(now())
  user        users @relation(fields: [userid],references: [id])
  userid   Int   @unique
}
model leetcode {
  id Int @id@default(autoincrement())
  easy Int 
  medium Int 
  hard  Int 
  total Int
  lastSynced  DateTime @default(now())
  user users  @relation(fields: [userid],references: [id])
  userid Int @unique
}